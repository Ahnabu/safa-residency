# Server Environment Variables

# Application Environment
NODE_ENV=development

# Server Port
PORT=5000

# Default Password for Admin/Staff Creation
DEFAULT_PASS=your_default_password_here

# JWT Configuration
JWT_EXPIRE=90d
ACCESS_TOKEN_SECRET=your_super_secret_jwt_token_here_generate_a_long_random_string

# MongoDB Database Connection
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority&appName=Cluster0

# SSLCommerz Payment Gateway (Bangladesh)
STORE_ID=your_sslcommerz_store_id
STORE_PASSWORD=your_sslcommerz_password
SSL_PAYMENT_URL=https://sandbox.sslcommerz.com/gwprocess/v4/api.php
SSL_PAYMENT_VALIDATION_URL=https://sandbox.sslcommerz.com/validator/api/validationserverAPI.php

# Email Configuration (Gmail SMTP)
SENDER_EMAIL=your-email@gmail.com
SENDER_APP_PASS=your_gmail_app_password_here
